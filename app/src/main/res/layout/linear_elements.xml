<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">


    <TableRow android:layout_width="match_parent" android:background="@color/lightGreen">
        <TextView
            android:text="Humedad" android:layout_span="1" android:textSize="20sp" android:gravity="center"/>
        <TextView   android:layout_span="1" android:textSize="20sp"/>
        <TextView android:text="Luz"  android:layout_span="1" android:textSize="20sp" android:gravity="center"/>
    </TableRow>
    <TableRow android:layout_width="match_parent" android:background="@color/lightGreen">
        <TextView android:id="@+id/humidity_id"  android:text="celda 2.1" android:layout_span="1"
            android:textSize="25sp" android:gravity="center" android:textColor="@color/white"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:src="@drawable/lettuce" />
        <TextView android:id="@+id/luminocity_id" android:text="celda 2.3"
            android:layout_span="1" android:textSize="25sp" android:gravity="center" android:textColor="@color/white"/>
    </TableRow>
    <TableRow android:layout_width="match_parent" android:background="@color/lightGreen">
        <TextView android:text="Temperatura" android:layout_span="1" android:textSize="20sp" android:gravity="center"/>
        <TextView  android:layout_span="1" android:textSize="20sp"/>
        <TextView android:text="Tanque" android:layout_span="1"  android:textSize="20sp" android:gravity="center"/>
    </TableRow>
    <TableRow android:layout_width="match_parent" android:background="@color/lightGreen">
        <TextView  android:id="@+id/temperature_id" android:text="Celda 4.1" android:layout_span="1"
            android:textSize="25sp" android:gravity="center" android:textColor="@color/white"/>
        <TextView   android:layout_span="1" android:textSize="20sp"/>
        <TextView android:text="Celda 4.3" android:layout_span="1"  android:textSize="25sp"
            android:gravity="center" android:textColor="@color/white"/>
    </TableRow>
</TableLayout>